@import "nib"
@import "_variables"
@import "_extend"

global-reset()



html, body
  background-color:#282a36
  line-height: 1.6
  letter-spacing: .06em
  scroll-behavior: smooth
  font-family: trebuchet ms,Verdana,verdana ref,segoe ui,Candara,lucida grande,lucida sans unicode,lucida sans,Tahoma,sans-serif, base-style

::-webkit-scrollbar {
    width: 8px;
    height: 8px;
    background: #232327
}
::-webkit-scrollbar-thumb {
    background: #515186
}
::-webkit-scrollbar-thumb:hover {
    background: #8d8de0
}


.container
  margin: 0 auto
  max-width: 720px
  color: #b3b1ad
  color: #39bae6


